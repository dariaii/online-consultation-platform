@model ForgotPasswordViewModel
@{
    ViewData["Title"] = @Localizer["Account_ForgotPassword"];
    Layout = "_LayoutAnonymous";
}

<form class="form-wrap" asp-route-returnUrl="@Model.ReturnUrl" asp-action="@nameof(AccountController.ForgotPassword)" method="post">
    <div class="logo-box">
        <img class="login-OCP-logo" src="~/images/OCP-logo.png" alt="OCP Logo" />
    </div>

    <div class="form-title">
        <h3 class="sub-title">@Localizer["Account_ForgotPassword"]</h3>
    </div>

    <div class="input-box">
        <label asp-for="Email" class="text-left">@Localizer["Account_Email"]</label>
        <input asp-for="@Model.Email" placeholder="@Localizer["Account_Email"]" class="text-left"/>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <input type="submit" value="@Localizer["Account_Submit"]" class="btn login-btn" />
</form>